commands:
    # Deployment commands for all environments.
    all:
        - shell: 'echo "This is for all environments".'
        - shell: 'if [[ -f composer.json ]]; then composer install; fi'
        - shell: 'if [[ -f package.json ]]; then npm install; fi'

    dev:
        - shell: 'echo "This is a DEV script!"'
        - shell: 'echo "Environment name {{env}}!"'
        - shell: 'echo "Working directory {{dir}}!"'
        - shell: 'echo "From procedure config (basePath): {{basePath}}, yes!"'
        - task: 'composer'
        - task: 'npm'
        - node: 'bin/install'
        - symfony: 'cache:clear'
    
    prod:
        - 'echo "This is a PROD script!"'

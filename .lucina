commands:
    # Deployment commands for all environments.
    all:
        - 'echo "This is for all environments".'
        - 'if [[ -f composer.json ]]; then composer install; fi'
        - 'if [[ -f package.json ]]; then npm install; fi'

    dev:
        - 'echo "This is a DEV script!"'
        - 'echo "Environment name {{env}}!"'
        - 'echo "Working directory {{dir}}!"'
        - 'echo "From procedure config (basePath): {{basePath}}, yes!"'
    
    prod:
        - 'echo "This is a PROD script!"'
